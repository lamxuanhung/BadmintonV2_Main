  sConfig.Rank = ADC_RANK_CHANNEL_NUMBER;
  sConfig.SamplingTime = ADC_SAMPLETIME_13CYCLES_5;
  if (HAL_ADC_ConfigChannel(&hadc, &sConfig) != HAL_OK)
  {
    Error_Handler();
  }
  /* USER CODE BEGIN ADC_Init 2 */
  /* ### - 2 - Start calibration ############################################ */
	if (HAL_ADCEx_Calibration_Start(&hadc) != HAL_OK)
	{
	  Error_Handler();
